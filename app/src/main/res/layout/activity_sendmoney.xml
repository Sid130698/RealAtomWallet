<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sendmoney">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atmbackg"
        android:alpha="0.35"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/contactbox"
        android:hint="Enter The Amount "
        android:textAlignment="center"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#800080"
        android:textColorHint="#800080"
        android:id="@+id/sendMoneyEditText"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        android:padding="8dp"
        android:backgroundTint="#ffc8b3"
        android:inputType="number"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sendmoney"
        android:layout_below="@id/sendMoneyEditText"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/sendMoneyImageView"
        android:elevation="10dp"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Money"
        android:id="@+id/sendMoneyTextView"
        android:textSize="25sp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="#000000"/>



</RelativeLayout>