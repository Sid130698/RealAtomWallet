<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recieverMessageTextView"

        android:layout_margin="8dp"
        android:padding="3dp"
        android:background="@drawable/recievermessagelayout"
        android:text="Reciever Message here"
        android:textSize="15dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senderMessageTextView"

        android:layout_margin="8dp"
        android:layout_alignParentRight="true"

        android:padding="3dp"
        android:background="@drawable/sendermessagelayout"
        android:text="Reciever Message here"
        android:textSize="15dp"
        android:textColor="#000000"
        />

</RelativeLayout>