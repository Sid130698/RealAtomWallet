<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atmbackg"
        android:alpha="0.35">



    </RelativeLayout>

    <ImageView
        android:id="@+id/imagePurchase"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/shop"
        android:layout_alignTop="@id/chatIconImageView"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imageHistory"
        android:clickable="true"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profilePhotoImageView"
        android:layout_marginLeft="12dp"
        android:elevation="4dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/usernamelogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePurchase"
        android:text="Shops"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="290dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:elevation="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/imageHistory"
        android:src="@drawable/transactionhistory"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/imageHistory"
        android:text="History"

        android:id="@+id/textHistory"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameHomeTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/profilePhotoImageView"



        android:hint="UserName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="8sp"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/balanceTextBox"
      android:layout_centerHorizontal="false"
      android:layout_alignParentTop="true"
      android:textStyle="normal"
      android:layout_alignParentRight="true"
      android:textSize="18sp"
      android:hint="Balance"
      android:elevation="10dp"
      android:layout_marginTop="8sp"
      android:layout_marginRight="18sp"
      android:textColor="#000000"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addmoney"
        android:layout_marginTop="80dp"
        android:elevation="10dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/balanceTextBox"
        android:tooltipText="Add Money to the Wallet"
        android:id="@+id/imageAddMoney"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="AddMoney"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textAddMoney"
        android:layout_below="@id/imageAddMoney"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/paymoney"
        android:layout_below="@id/balanceTextBox"
        android:elevation="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/imagePayMoney"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="PayMoney"
        android:textAlignment="center"
        android:layout_marginLeft="250dp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textPayMoney"
        android:layout_below="@id/imagePayMoney"/>

    <ImageView
        android:id="@+id/logoutbtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/imagePurchase"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:elevation="10dp"
        android:src="@drawable/logout" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chaticon"
        android:id="@+id/chatIconImageView"
        android:layout_below="@id/textAddMoney"
        android:elevation="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Chat"
        android:textAlignment="center"
        android:layout_marginLeft="58dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textChat"
        android:layout_below="@id/chatIconImageView"/>


</RelativeLayout>