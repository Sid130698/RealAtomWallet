<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atmbackg"
        android:alpha="0.35"
        >


    </RelativeLayout>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/imageAtomwallet"

        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/atomwallet"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"

        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="Enter  your User-id"
        android:id="@+id/userIdEditText"
        android:background="#ccffcc"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageAtomwallet"
        android:textSize="25sp"
        android:padding="8dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:imeActionId="4"
        android:imeActionLabel="send"
        android:imeOptions="actionSend"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:background="#ccffcc"
        android:id="@+id/passwordEditText"
        android:layout_below="@+id/userIdEditText"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:padding="8dp"/>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordEditText"
        android:text="Submit"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_new_account"
        android:text="Create New Account?"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>